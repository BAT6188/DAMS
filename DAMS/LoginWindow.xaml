                       Text="Beijing Zhimin Science and Technology Development Co.,Ltd." />

            <Button  x:Name="btnStart" Content="激   活" HorizontalAlignment="Left" Height="51" VerticalAlignment="Top" Width="334" FontSize="20" Foreground="#FF9B9494" 
                Canvas.Left="230" Canvas.Top="396" Click="Button_Click"/>
